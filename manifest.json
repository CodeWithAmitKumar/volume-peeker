{
  "manifest_version": 3,
  "name": "Volume Peeker",
  "version": "1.0",
  "description": "Boost YouTube volume beyond the default maximum.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://*.youtube.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}